modules = ["java", "java-17"]

[nix]
channel = "stable-24_05"
packages = ["unzip", "zip", "jdk", "openjdk17", "gradle"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "build_plugin"

[[workflows.workflow]]
name = "build_plugin"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "gradle clean build"

[deployment]
run = ["sh", "-c", "chmod +x ./gradlew && ./gradlew build"]
