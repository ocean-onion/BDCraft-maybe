name: BDCraft
version: 1.1.0
main: com.bdcraft.plugin.BDCraft
api-version: '1.21'
author: BDCraft Team
description: A comprehensive economy and market system plugin for Minecraft
website: https://bdcraft.com

commands:
  bdscoreboard:
    description: Toggles the BDCraft scoreboard
    usage: /bdscoreboard [toggle|on|off|reload]
    aliases: [bdsc, bdboard]
    permission: bdcraft.scoreboard
  bdbalance:
    description: Checks your BD currency balance
    usage: /bdbalance
    aliases: [bdbal, bdmoney]
    permission: bdcraft.balance
  bdpay:
    description: Pay BD currency to another player
    usage: /bdpay <player> <amount>
    permission: bdcraft.pay
  bdmarket:
    description: Manage your markets
    usage: /bdmarket [create|list|info|upgrade|addassociate|removeassociate]
    aliases: [bdm, markets]
    permission: bdcraft.market
  bdrebirth:
    description: Rebirth to gain permanent bonuses
    usage: /bdrebirth
    permission: bdcraft.rebirth
  bdrank:
    description: Check your current rank
    usage: /bdrank
    permission: bdcraft.rank
  bdaura:
    description: Toggle your rebirth aura
    usage: /bdaura
    permission: bdcraft.rebirth.aura
  bdbless:
    description: Bless another player with temporary bonuses
    usage: /bdbless <player>
    permission: bdcraft.rebirth.bless
  bdtouch:
    description: Apply rebirth touch to crops
    usage: /bdtouch
    permission: bdcraft.rebirth.touch
  bdinsight:
    description: Get economic insights and predictions
    usage: /bdinsight [market|economy|trends]
    permission: bdcraft.insight
  bdadmin:
    description: Admin commands for BDCraft
    usage: /bdadmin [reload|setmoney|setrank|resetplayer|market]
    permission: bdcraft.admin
    
  # BDVital module commands
  bdhome:
    description: Teleport to your homes
    usage: /bdhome [set|del|list|<name>]
    aliases: [bdhomes]
    permission: bdvital.home
  bdtp:
    description: Teleport to a player or coordinates
    usage: /bdtp <player> or /bdtp <x> <y> <z>
    aliases: [bdteleport]
    permission: bdvital.teleport
  bdtpa:
    description: Request to teleport to a player
    usage: /bdtpa <player>
    aliases: [bdteleportask, bdtpask]
    permission: bdvital.teleport.ask
  bdtpd:
    description: Deny teleport requests
    usage: /bdtpd
    aliases: [bdtpdeny, bdteleportdeny]
    permission: bdvital.teleport.deny
  bdtpr:
    description: Teleport to a random location
    usage: /bdtpr
    aliases: [bdtprandom, bdteleportrandom]
    permission: bdvital.teleport.random
  bdback:
    description: Teleport to your previous location
    usage: /bdback
    permission: bdvital.teleport.back
  bdspawn:
    description: Teleport to the server spawn point
    usage: /bdspawn
    permission: bdvital.teleport.spawn
  bdmsg:
    description: Send a private message to a player
    usage: /bdmsg <player> <message>
    aliases: [bdtell, bdwhisper, bdw]
    permission: bdvital.message
  bdr:
    description: Reply to the last private message
    usage: /bdr <message>
    aliases: [bdreply]
    permission: bdvital.message.reply
  bdmail:
    description: Send and receive mail
    usage: /bdmail [read|send|clear]
    permission: bdvital.mail
  bddeathinfo:
    description: View information about your last death
    usage: /bddeathinfo
    aliases: [bddeath]
    permission: bdvital.death
  bdmarketwarp:
    description: Warp to a market
    usage: /bdmarketwarp [list|<market>]
    aliases: [bdmwarp]
    permission: bdvital.market.warp

permissions:
  bdcraft.*:
    description: Gives access to all BDCraft commands
    children:
      bdcraft.scoreboard: true
      bdcraft.balance: true
      bdcraft.pay: true
      bdcraft.market: true
      bdcraft.rebirth: true
      bdcraft.rebirth.aura: true
      bdcraft.rebirth.bless: true
      bdcraft.rebirth.touch: true
      bdcraft.rank: true
      bdcraft.insight: true
      bdcraft.admin: true
      bdvital.*: true
      
  bdvital.*:
    description: Gives access to all BDVital commands
    children:
      bdvital.home: true
      bdvital.sethome: true
      bdvital.teleport: true
      bdvital.teleport.ask: true
      bdvital.teleport.deny: true
      bdvital.teleport.random: true
      bdvital.teleport.back: true
      bdvital.teleport.spawn: true
      bdvital.message: true
      bdvital.message.reply: true
      bdvital.mail: true
      bdvital.death: true
      bdvital.market.warp: true
      
  bdvital.home:
    description: Allows access to the home command
    default: true
  
  bdvital.sethome:
    description: Allows setting homes
    default: true
    
  bdvital.teleport:
    description: Allows teleporting to players or coordinates
    default: op
    
  bdvital.teleport.ask:
    description: Allows requesting teleports to other players
    default: true
    
  bdvital.teleport.deny:
    description: Allows denying teleport requests
    default: true
    
  bdvital.teleport.random:
    description: Allows teleporting to random locations
    default: true
    
  bdvital.teleport.back:
    description: Allows teleporting to previous locations
    default: true
    
  bdvital.teleport.spawn:
    description: Allows teleporting to spawn
    default: true
    
  bdvital.message:
    description: Allows sending private messages
    default: true
    
  bdvital.message.reply:
    description: Allows replying to private messages
    default: true
    
  bdvital.mail:
    description: Allows using the mail system
    default: true
    
  bdvital.death:
    description: Allows viewing death information
    default: true
    
  bdvital.market.warp:
    description: Allows warping to markets
    default: true
    
  bdvital.home.unlimited:
    description: Allows unlimited homes
    default: op
    
  bdvital.home.10:
    description: Allows 10 homes
    default: op
    
  bdvital.home.5:
    description: Allows 5 homes
    default: op
    
  bdvital.home.3:
    description: Allows 3 homes
    default: op
    
  bdcraft.scoreboard:
    description: Allows using scoreboard commands
    default: true
    
  bdcraft.balance:
    description: Allows checking balance
    default: true
    
  bdcraft.pay:
    description: Allows paying other players
    default: true
    
  bdcraft.market:
    description: Allows basic market usage
    default: true
    
  bdcraft.market.create:
    description: Allows creating markets
    default: true
    
  bdcraft.market.create.tier1:
    description: Allows creating up to 1 market
    default: true
    
  bdcraft.market.create.tier2:
    description: Allows creating up to 2 markets
    default: op
    
  bdcraft.market.create.tier3:
    description: Allows creating up to 3 markets
    default: op
    
  bdcraft.rebirth:
    description: Allows using rebirth
    default: true
    
  bdcraft.rebirth.*:
    description: Allows using all rebirth features
    children:
      bdcraft.rebirth.aura: true
      bdcraft.rebirth.bless: true
      bdcraft.rebirth.touch: true
      
  bdcraft.rebirth.aura:
    description: Allows using rebirth aura
    default: true
    
  bdcraft.rebirth.bless:
    description: Allows blessing other players
    default: true
    
  bdcraft.rebirth.touch:
    description: Allows using rebirth touch
    default: true
    
  bdcraft.rank:
    description: Allows checking rank
    default: true
    
  bdcraft.insight:
    description: Allows using economic insights
    default: true
    
  bdcraft.admin:
    description: Allows using admin commands
    default: op